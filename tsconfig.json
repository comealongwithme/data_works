{
    "compilerOptions": {
        "rootDir": "./src/",
        "outFile": "./dist/tree-table.js",

        "module": "AMD",
        "moduleResolution": "Node",

        "target": "ES2020",

        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES5",
            "ES6",
            "ES2020",
        ],

        "allowJs": false,

        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,

        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,

        "removeComments": true,
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}